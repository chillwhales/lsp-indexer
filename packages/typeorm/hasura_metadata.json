{
  "resource_version": 1,
  "metadata": {
    "version": 3,
    "sources": [
      {
        "name": "default",
        "kind": "postgres",
        "tables": [
          {
            "table": {
              "name": "transfer",
              "schema": "public"
            },
            "select_permissions": [
              {
                "role": "public",
                "permission": {
                  "columns": "*",
                  "filter": {},
                  "allow_aggregations": true
                }
              }
            ]
          }
        ],
        "configuration": {
          "connection_info": {
            "database_url": {
              "from_env": "HASURA_GRAPHQL_DATABASE_URL"
            },
            "isolation_level": "read-committed",
            "pool_settings": {
              "connection_lifetime": 600,
              "idle_timeout": 180,
              "max_connections": 50,
              "retries": 1
            },
            "use_prepared_statements": true
          }
        }
      }
    ]
  }
}